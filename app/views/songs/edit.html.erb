<%= link_to " Cancel and return to Song List", root_path %>
<%= form_with model: @song, class: "new_song_form" do |f| %>
  <%= label_tag(:title, "Song Title:") %>
  <%= f.text_field :title %>
  <%= label_tag(:lyrics, "Lyrics:") %>
  <%= f.text_area :lyrics, size: "60x40" %>
  <div class="new_song_buttons">
    <%= f.submit "Update Song" %>
    <%= link_to button_tag("Cancel"), @song %>
  </div>
<% end %>